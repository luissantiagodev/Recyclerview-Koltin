<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/bgCard"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_main_news"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.6"
            android:src="@drawable/ronaldo_juve"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/title_main_news"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/titulo_de_la_noticia"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/description_news"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/descripcion_de_la_noticia"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>